<h1>Edit</h1>

<table class="table table-striped">
	<thead>
		<tr>
			<th>タイトル</th>
			<th>本文</th>
		</tr>
	</thead>
	<tbody>
		<%= form_for(@book) do |f| %>

		<% if @book.errors.any? %>
	    <div class = "alert alert-warning">
	        <ul>
	            <% @book.errors.full_messages.each do |message| %>
	                <li><%= message %></li>
	            <% end %>
	        </ul>
	    </div>
		<% end %>

		<tr>
			<td><%= f.text_field :title %></td>
			<td> <%= f.text_area :body %></td>

		</tr>

		<%= f.submit '保存' %>
		<% end %>
	</tbody>
</table>


<%= link_to "show", book_path %> /
