<h1>Books</h1>
<table class="table table-striped">
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
		</tr>
	</thead>

	<tbody>

		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td>
			<%= link_to "show", book_path(book.id) %> /
			<%= link_to "edit", edit_book_path(book.id) %> /
			<%= link_to "destroy", book_path(book.id),method: :delete,"data-confirm" => "本当に削除しますか？" %>
		    </td>
		</tr>
		<% end %>

	</tbody>
</table>


<h2>New Book</h2>
<%= form_for(@book) do |f| %>

	<% if @book.errors.any? %>
	    <div class = "alert alert-warning">
	        <ul>
	            <% @book.errors.full_messages.each do |message| %>
	                <li><%= message %></li>
	            <% end %>
	        </ul>
	    </div>
	<% end %>

<h4>タイトル</h4>
<%= f.text_field :title %>

<h4>本文</h4>
<%= f.text_area :body %>

<br><%= f.submit "投稿" %>

<% end %>
